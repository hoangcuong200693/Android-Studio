<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_new_tenkqht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lập trình Android "
                android:textColor="@color/xanhdatroi"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_new_labelTietNghi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiết nghỉ : "
                        android:textSize="11dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_new_sotietnghi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_new_dieukienthi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Đủ điều kiện thi"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.9" >

            <TextView
                android:id="@+id/tv_new_diemTB"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="9.2"
                android:textColor="@color/green"
                android:textSize="23dp"
                android:textStyle="bold" />
        </LinearLayout>
    </TableRow>

</LinearLayout><!-- From: file:/DATA/Android%20Project/Android%20Studio/haUIStudents/src/main/res/layout/new_adapter_kqht.xml -->