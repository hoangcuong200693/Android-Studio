<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/imv_monhoc"
            android:layout_weight="2.5"
            android:src="@drawable/iconhaui" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/tvMonHoc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextVieasdfasdfasdfasdfasdfasdfw"
                android:textColor="#0002A8"
                android:textSize="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="2.3"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:layout_centerHorizontal="true"
                android:text="**"
                android:textColor="#FF000B"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_ketquathi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:text="3.4"
                android:layout_centerHorizontal="true"
                android:textColor="#228654"
                android:visibility="invisible" />
        </RelativeLayout>
    </TableRow>

</LinearLayout>