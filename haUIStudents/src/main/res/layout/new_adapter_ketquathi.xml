<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_new_tenketquathi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/xanhdatroi"
                android:text="Lập trình Android " />

            <TableRow
                android:paddingTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_new_labelDiemThi"
                        android:layout_width="wrap_content"
                        android:textSize="13dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:text="Điểm TBC : " />

                    <TextView
                        android:id="@+id/tv_new_diemThi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="13dp"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="3dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_new_diemTBC"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Điểm thi lần 2 : 10"
                    android:textStyle="bold" />
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.8" >

            <TextView
                android:id="@+id/tv_new_diemChu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="9.2"
                android:layout_gravity="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="28dp" />
        </LinearLayout>
    </TableRow>

</LinearLayout>